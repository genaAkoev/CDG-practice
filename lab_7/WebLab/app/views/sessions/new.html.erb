<div align="center">
    <h1>Аутентификация пользователя</h1>
    <%if flash[:alert]%>
        <font color="red"><%= flash[:alert] %></font>
    <%end%>
    <%= form_with url: session_path do |f|%>
        <%= f.label :email, 'E-mail'%>
        <%= f.email_field :email %>
        <br>
        <%= f.label :password, 'Пароль'%>
        <%= f.password_field :password%>
        <br>
        <%= f.submit 'Войти'%>
    <% end %>
</div>
<br>
<%= button_to '⇐ На Главную', root_path, method: :get %>